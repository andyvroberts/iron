<Page x:Class="Obdurate.views.Start"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:UsCn="clr-namespace:Obdurate"
      xmlns:local="clr-namespace:Obdurate.views"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="525"
      WindowTitle="Obdurate - Home"
      Title="ObdurateHome">

  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="10"/>
      <ColumnDefinition Width="1*"/>
      <ColumnDefinition Width="3*"/>
      <ColumnDefinition Width="10"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="10"/>
      <RowDefinition Height="1*"/>
      <RowDefinition Height="1*"/>
      <RowDefinition Height="1*"/>
      <RowDefinition Height="1*"/>
      <RowDefinition Height="1*"/>
      <RowDefinition Height="1*"/>
      <RowDefinition Height="10"/>
    </Grid.RowDefinitions>

    <UsCn:SlideMenu Grid.Column="0" Grid.ColumnSpan="3" 
                    Grid.Row="1" Grid.RowSpan="6"
                    Panel.ZIndex="99"/>
  </Grid>
</Page>
